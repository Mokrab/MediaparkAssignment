<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_platenumber">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_platenumber"
            android:text="Plate Number: "
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_plateinput"
            android:layout_toRightOf="@id/text_platenumber"
            android:layout_centerVertical="true"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Filter"
        android:id="@+id/button_setFilter"
        android:layout_below="@+id/linear_platenumber"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button_resetFilter"
        android:layout_below="@+id/linear_platenumber"
        android:layout_toRightOf="@+id/button_setFilter"
        android:onClick="buttonReset"/>



</RelativeLayout>